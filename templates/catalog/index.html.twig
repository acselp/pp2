        <div class="container">
            <div class="row">


                {% for movie in movies %}

                <!-- card -->
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                    <div class="card">
                        <div class="card__cover">
                            <img src="/upload/movies/image/{{ movie.m_image }}" alt="">
                            <a href="/movie/detail/{{ movie.m_id }}" class="card__play">
                                <i class="icon ion-ios-play"></i>
                            </a>
                        </div>
